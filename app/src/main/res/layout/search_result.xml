<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="1dp"
    android:paddingTop="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_show_card"
        card_view:cardBackgroundColor="#90e4cc"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:id="@+id/show_poster"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/show_name"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/show_poster"
                android:textColor="@color/showName"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/show_rating"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/show_name"
                android:textColor="@color/showRatings" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="18dp"
                android:src="@drawable/ic_exit_to_app_black_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>