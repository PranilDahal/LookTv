<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_show_card"
        card_view:cardBackgroundColor="#90e4cc"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="225dp"
                android:id="@+id/show_poster"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_language"
                android:layout_toRightOf="@+id/show_poster"
                android:textSize="16sp"
                android:layout_marginTop="6sp"
                android:textColor="@color/showName"/>

            <TextView
                android:id="@+id/show_premier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_language"
                android:layout_toRightOf="@+id/show_poster"
                android:textSize="16sp"
                android:layout_marginTop="6sp"
                android:textColor="@color/showName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_status"
                android:layout_toRightOf="@+id/show_poster"
                android:layout_below="@+id/show_premier"
                android:textSize="16sp"
                android:layout_marginTop="6sp"
                android:textColor="@color/showName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_name"
                android:layout_below="@+id/show_poster"
                android:textSize="20sp"
                android:textColor="@color/showName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_rating"
                android:layout_below="@+id/show_name"
                android:textColor="@color/showRatings"/>

            <Button
                android:id="@+id/show_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/show_poster"
                android:layout_toRightOf="@+id/show_poster"
                android:text="OfficialSite"
                android:textAllCaps="false" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>